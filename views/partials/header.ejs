<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Trekking Community Connect</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row headerNav">
        <div class="col-sm-8">
          <a href="/">
            <img
              src="../../images/hike.jpg"
              alt="trekkingCommunity"
            />
          </a>
        </div>
        <div class="col-sm-4">
          <nav id="navbar-nav">
            <ul class="nav header">
              <%if (!user){%>
                <li class="nav-item">
                  <a class="nav-link login-button" href="/users/login">Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link signup-button" href="/users/new">Sign Up</a>
                </li>
              <%} else {%>
                <li class="nav-item">
                  <a class="nav-link" href="/events/new">New Event</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link signup-button" href="/users/profile"><%= firstName%>'s Profile</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link signup-button" href="/users/logout">Logout</a>
                </li>
              <%}%>
            </ul>
          </nav>
        </div>
      </div>
      <div id="siteNav" class="row">
        <div class="col-lg-3">
          <nav>
            <ul class="nav">
              <li class="nav-item">
                <a class="nav-link site-nav-link" href="/events">Events</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>

    <% if(errorMessages.length > 0) {
      errorMessages.forEach(message => { %>
          <div class ='error'><%= message %></div>
     <% });
  } %>

  <% if(successMessages.length > 0) {
      successMessages.forEach(message => { %>
          <div class = 'success'><%= message %></div>
     <% });
  } %>